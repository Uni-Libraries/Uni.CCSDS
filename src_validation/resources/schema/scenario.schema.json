{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://uni.ccsds/validation/scenario.schema.json",
  "title": "USLP Validation Scenario Pack",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "suite": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "defaults": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "phys_channel": { "type": "string" },
        "vcid": { "type": "integer", "minimum": 0 },
        "mapid": { "type": "integer", "minimum": 0 },
        "bypass": { "type": "string", "enum": ["sequence", "expedited"] },
        "fecf": { "type": "string", "enum": ["crc16-ccsds", "none"] },
        "ocf_policy": { "type": "string", "enum": ["absent", "required", "optional"] },
        "upid": { "type": "integer", "minimum": 0, "maximum": 31 },
        "frame_type": { "type": "string", "enum": ["fixed", "variable", "truncated"] },
        "has_insert_zone": { "type": "boolean" },
        "insert_zone_len": { "type": "integer", "minimum": 0 }
      }
    },
    "actors": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "local_encode": { "type": "boolean" },
        "local_decode": { "type": "boolean" },
        "nasa_encode": { "type": "boolean" },
        "nasa_decode": { "type": "boolean" },
        "python_encode": { "type": "boolean" },
        "python_decode": { "type": "boolean" }
      }
    },
    "matrix": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".*": {
          "type": "array",
          "minItems": 1
        }
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string" },
          "attributes": { "type": "object" },
          "actors": { "$ref": "#/properties/actors" }
        }
      }
    }
  },
  "required": ["suite", "matrix"]
}